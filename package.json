{
  "name": "webpack-initial-chunks",
  "version": "0.1.0-alpha.1",
  "description": "A solution for adding all required webpack chunks to the initial server response.",
  "jsnext:main": "./dist/esm/index.js",
  "main": "./dist/commonjs/index.js",
  "typings": "./dist/index.d.ts",
  "keywords": [
    "webpack",
    "ssr",
    "server-side-rendering",
    "code-splitting"
  ],
  "author": "Chi Vinh Le",
  "license": "MIT",
  "devDependencies": {
    "add-text-to-markdown": "^1.0.2",
    "cash-cat": "^0.2.0",
    "cash-rm": "^0.2.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.14",
    "cross-env": "^3.1.1",
    "documentation": "^4.0.0-beta9",
    "documentation-markdown-api-theme": "^1.0.2",
    "eslint": "^3.7.1",
    "eslint-plugin-import": "^2.0.0",
    "gulp": "^3.9.1",
    "gulp-eslint": "^3.0.1",
    "gulp-jsonlint": "^1.1.2",
    "gulp-tslint": "^6.1.2",
    "gulp-typescript": "^3.0.2",
    "istanbul": "^1.1.0-alpha.1",
    "merge2": "^1.0.2",
    "mocha": "^3.1.0",
    "rimraf": "^2.5.4",
    "ts-node": "^1.2.3",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3",
    "typings": "^1.4.0"
  },
  "scripts": {
    "bootstrap": "npm run typings",
    "build": "gulp",
    "clean": "rm -rf dist",
    "ci:coveralls": "cat coverage/lcov.info | coveralls",
    "docs": "documentation build dist/es6/index.js --theme node_modules/documentation-markdown-api-theme -f html -o api.md && cat api.md | add-text-to-markdown -w --section API ./README.md && rm api.md",
    "lint": "gulp lint",
    "prepublish": "npm run clean && npm run build && npm run docs",
    "test": "cross-env TS_NODE_PROJECT=tsconfig.test.json mocha --opts mocha.opts",
    "test:watch": "cross-env TS_NODE_PROJECT=tsconfig.test.json mocha --opts mocha.opts --watch",
    "test:coverage": "cross-env TS_NODE_PROJECT=tsconfig.test.json istanbul cover -e .ts _mocha -- --opts mocha.opts",
    "typings": "typings install"
  }
}
